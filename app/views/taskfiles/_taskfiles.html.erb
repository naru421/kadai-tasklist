<ul class="media-list">
  <% taskfiles.each do |taskfile| %>
    <% user = taskfile.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= taskfile.created_at %></span>
        </div>
        <div>
          <p><%= taskfile.content %></p>
        </div>
        <div>
          <% if current_user == taskfile.user %>
            <%= link_to "Delete", taskfile, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate taskfiles %>
</ul>